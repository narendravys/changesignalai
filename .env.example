# ChangeSignal AI â€“ single env file for backend, frontend, and Docker
# Copy to .env and set your values. All services use this file (root only).

# ======================
# Backend
# ======================

# Application
APP_NAME="ChangeSignal AI"
APP_ENV=development
DEBUG=True
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql://changesignal:changesignal_pass@postgres:5432/changesignal_db
DB_HOST=postgres
DB_PORT=5432
DB_NAME=changesignal_db
DB_USER=changesignal
DB_PASSWORD=changesignal_pass

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Authentication
# Generate a secure secret key (min 32 characters)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OpenAI (Required for LLM features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.2

# Groq (optional, alternative LLM)
# GROQ_API_KEY=
# GROQ_MODEL=llama3-8b-8192
# GROQ_TEMPERATURE=0.1

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email (SMTP) Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@changesignal.ai
SMTP_TLS=True

# Monitoring Settings
DEFAULT_CHECK_FREQUENCY=daily
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security (include 127.0.0.1 if you open the app at http://127.0.0.1:3000)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000
RATE_LIMIT_PER_MINUTE=60

# ======================
# Frontend (Next.js reads NEXT_PUBLIC_* at build time; Docker uses these from .env)
# ======================
# For local dev use http://localhost:8000; for Docker use http://backend:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
